# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# User specific aliases and functions


# PS1="\`if [ \$? = 0 ]; then echo \[\e[1\;33m\]@.@\[\e[1m\]; else echo \[\e[1\;31m\]T_T\[\e[0m\]; fi\` \[\e[1;32m\]\u\[\e[m\] \[\e[1;34m\]\t\[\e[m\] \[\e[1;31m\]\W\[\e[m\] \[\e[1;32m\]\\$\[\e[m\] \[\e[0;0m\]"
# PS1="\[\e[1;32m\]\u\[\e[m\]\[\e[1;33m\]@\[\e[1m\]\[\e[1;31m\]\h\[\e[1m\] \[\e[1;33m\]\t\[\e[m\] \[\e[1;34m\]\W\[\e[m\] \`if [ \$? = 0 ]; then echo \[\e[1\;32m\]\\$\[\e[1m\]; else echo \[\e[1\;31m\]\\$\[\e[0m\]; fi\` \[\e[0;0m\]"
# PS1='\[\e[1;32m\][\u@\h \[\e[1;32m\]\w\[\e[1;32m\]]\n\[\e[1;30m\]\$ \[\e[0m\]'

. $HOME/.alias_marslo

SSH_ENV=$HOME/.ssh/environment
   
# start the ssh-agent
function start_agent {
    echo "Initializing new SSH agent..."
    # spawn ssh-agent
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > ${SSH_ENV}
    echo succeeded
    chmod 600 ${SSH_ENV}
    . ${SSH_ENV} > /dev/null
    /usr/bin/ssh-add
}
   
if [ -f "${SSH_ENV}" ]; then
     . ${SSH_ENV} > /dev/null
     ps -ef | \grep ${SSH_AGENT_PID} | \grep ssh-agent$ > /dev/null || {
        start_agent;
    }
else
    start_agent;
fi
